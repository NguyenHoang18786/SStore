@model SStore.Models.ProductCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductCategory", new { area = "Admin" })" class="breadcrumb-client">Categories</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Update</li>
        </ol>
    </nav>
    <h1 class="my-3 text-center admin-page-title text-uppercase">Update category</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-center">
            <div class="container-fluid" style="max-width:500px">
                <form>
                    @Html.HiddenFor(model => model.CategoryId)
                    <div class="mb-2">
                        <label for="CategoryName" class="form-label fw-bold">
                            @Html.LabelFor(c => c.CategoryName, "Category Name")<span class="fw-normal text-danger">*</span>
                        </label>
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="CategoryName" class="form-label fw-bold">
                            @Html.LabelFor(c => c.Description, "Description")
                        </label>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn sub-button"><span class="sub-button-text">Update</span></button>
                        <a href="@Url.Action("Index", "ProductCategory", new { area = "Admin"})" class="btn cancel-button"><span class="cancel-button-text">Cancel</span></a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
