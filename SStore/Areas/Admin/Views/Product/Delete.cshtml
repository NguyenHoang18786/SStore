@model SStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="breadcrumb-client">Products</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Delete</li>
        </ol>
    </nav>
    <div class="my-1 mx-2">
        <h3 class="mb-1 d-none d-sm-block mb-2">Are you sure you want to delete this product?</h3>
        <h5 class="mb-1 d-block d-sm-none">Are you sure you want to delete this product?</h5>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color my-2 d-block d-md-none">
                <button type="submit" class="btn delete-button">Delete</button>
                <a href="@Url.Action("Index", "Product", new { area = "Admin"})" class="btn back-page-button"><span class="back-page-button-text"></span>Back to list</a>
            </div>
        }
        <div class="row">
            <div class="col-md-7 mb-2">
                @if (Model.Image == null)
                {
                    <img src="~/Image/noimage.png" class="img-fluid img-thumbnail" />
                }
                else
                {
                    <img src="@Url.Content("~/Image/" + Model.Image)" class="img-fluid img-thumbnail" />
                }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color mt-2 d-none d-md-block">
                        <button type="submit" class="btn delete-button">Delete</button>
                        <a href="@Url.Action("Index", "Product", new { area = "Admin"})" class="btn back-page-button"><span class="back-page-button-text"></span>Back to list</a>
                    </div>
                }
            </div>
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <tr>
                            <th>
                                Name
                            </th>
                            <td>
                                @Model.ProductName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Category
                            </th>
                            <td>
                                @Model.ProductCategory.CategoryName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Brand
                            </th>
                            <td>
                                @Model.productBrand.BrandName
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Weight
                            </th>
                            <td>
                                @if (@Model.Weight == null)
                                {
                                    <p class="fst-italic m-0 text-secondary">...</p>
                                }
                                else
                                {
                                    <p class="m-0 text-truncate">@Model.Weight</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Size
                            </th>
                            <td>
                                @if (@Model.Size == null)
                                {
                                    <p class="fst-italic m-0 text-secondary">...</p>
                                }
                                else
                                {
                                    <p class="m-0 text-truncate">@Model.Size</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Color
                            </th>
                            <td>
                                @if (@Model.Color == null)
                                {
                                    <p class="fst-italic m-0 text-secondary">...</p>
                                }
                                else
                                {
                                    <p class="m-0 text-truncate">@Model.Color</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Price
                            </th>
                            <td>
                                @Model.Price $
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Description
                            </th>
                            <td>
                                @if (@Model.Description == null)
                                {
                                    <p class="fst-italic m-0 text-secondary">...</p>
                                }
                                else
                                {
                                    <p class="m-0 text-wrap">@Model.Description</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Status
                            </th>
                            <td>
                                @if (@Model.Status == true)
                                {
                                    <p class="m-0 text-success">In stock</p>
                                }
                                else
                                {
                                    <p class="m-0 text-danger">Out of stock</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                CreatedDate
                            </th>
                            <td class="fst-italic text-secondary">
                                @Model.CreatedDate
                            </td>
                        </tr>
                        <tr>
                            <th>
                                ModifiedDate
                            </th>
                            <td class="fst-italic text-secondary">
                                @Model.ModifiedDate
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Hot
                            </th>
                            <td>
                                @if (@Model.Hot == true)
                                {
                                    <p class="m-0 text-success">Yes</p>
                                }
                                else
                                {
                                    <p class="m-0 text-warning">No</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>
                                View
                            </th>
                            <td>
                                @Model.View
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
