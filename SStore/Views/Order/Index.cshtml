@model PagedList.IPagedList<SStore.Models.Order>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-2 mb-sm-4 mb-3">
    @* Breadccrumb *@
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new {area = ""})" class="breadcrumb-client"><i class="bi bi-house-door"></i> Home</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Orders</li>
        </ol>
    </nav>
    @* Page Title *@
    <h2 class="text-uppercase text-center page-title">Orders</h2>

    <div class="table-responsive d-none d-sm-block">
        <table class="table table-hover my-2">
            <thead>
                <tr>
                    <th class="text-center text-nowrap">
                        Id
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 200px">
                        Order date
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 130px">
                        Status
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 130px">
                        Customer Name
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 100px">
                        Email
                    </th>
                    <th class="text-center text-nowrap" style="min-width: 140px">
                        Phone
                    </th>
                    <th class="text-center text-nowrap">
                        Delivery Address
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.OrderId
                        </td>
                        <td class="text-center align-middle text-nowrap">
                            @item.OrderDate
                        </td>
                        <td class="text-center align-middle text-nowrap">
                            @item.Status
                        </td>
                        <td class="text-center align-middle text-nowrap">
                            @item.CustomerName
                        </td>
                        <td class="text-center align-middle">
                            @item.CustomerEmail
                        </td>
                        <td class="text-center align-middle">
                            @item.CustomerPhone
                        </td>
                        <td class="text-center align-middle">
                            @item.DeliveryAddress
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
