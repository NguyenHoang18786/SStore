@model SStore.Models.ProductCategory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductCategory", new { area = "Admin" })" class="breadcrumb-client">Categories</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Delete</li>
        </ol>
    </nav>
    @* Header display responsive *@
    <h3 class="mb-1 d-none d-sm-block">Are you sure you want to delete "@Model.CategoryName" category?</h3>
    <p class="fs-6 fw-lighter align-middle text-danger d-none d-sm-block"><i class="bi bi-exclamation-triangle"></i> Products under this category will also be deleted</p>
    <h4 class="mb-1 d-block d-sm-none">Are you sure you want to delete "@Model.CategoryName" category?</h4>
    <p class="fw-lighter align-middle text-danger d-block d-sm-none" style="font-size: 13px"><i class="bi bi-exclamation-triangle"></i> Products under this category will also be deleted</p>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" value="Delete" class="btn delete-button me-2">Delete</button>
                <a href="@Url.Action("Index", "ProductCategory", new { area = "Admin"})" class="btn back-page-button">Back to list</a>
            </div>
        }
    </div>
</div>