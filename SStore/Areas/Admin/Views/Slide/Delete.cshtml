@model SStore.Models.Slide

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    @* Breadcrumb *@
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Slide", new { area = "Admin" })" class="breadcrumb-client">Slides</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Delete</li>
        </ol>
    </nav>
    @* End breadcrumb *@

    @* Page title *@
    <h3 class="mb-1 d-none d-sm-block mb-2">Are you sure you want to delete this slide?</h3>
    <h5 class="mb-1 d-block d-sm-none">Are you sure you want to delete this slide?</h5>

    <div id="myCarousel" class="carousel slide mb-2" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Image/" + @Model.Image)" style="max-height:700px; width:100%" class="store-slide rounded" />
                <div class="container">
                    <div class="carousel-caption text-center">
                        <h1 class="d-none d-sm-block">@Model.Title</h1>
                        <p class="d-none d-sm-block sm fst-italic">@Model.Description</p>
                        <h6 class="d-block d-sm-none">@Model.Title</h6>
                        <p class="d-block d-sm-none fst-italic" style="font-size: 11px">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <input type="submit" value="Delete" class="btn delete-button" />
            <a href="@Url.Action("Index", "Slide", new { area = "admin" })" class="btn cancel-button"><span class="cancel-button-text">Cancel</span></a>
        </div>
    }
</div>
