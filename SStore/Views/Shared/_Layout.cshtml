<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/Public/css/custom.css" rel="stylesheet" />
    @RenderSection("header", required: false)
    @RenderSection("scripts", required: false)
</head>
<!-- Section Header -->
<body class="d-flex flex-column min-vh-100">
    <section class="header clearfix bg-white">
        <div class="container-lg">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-sm-between py-2">
                <!-- LOGO -->
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="col-md-auto text-dark text-decoration-none">
                        <h1 class="store-logo-homepage mb-0">SStore</h1>
                    </a>
                </div>
                <div class="d-none d-sm-block">
                    @using (Html.BeginForm("Index", "allProduct", FormMethod.Get))
                    {
                        <form class="d-flex col-md-auto justify-content-center">
                            <div class="d-flex align-items-center">
                                <input type="search" name="searchString" class="bd-search form-control me-2 form-control-dark" placeholder="search product..." />
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </div>
                        </form>
                    }
                </div>
                <div class="d-none d-sm-block">
                    <div class="d-flex col-md-auto text-end">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            <div class="d-block d-sm-none d-flex justify-content-center mb-2">
                @using (Html.BeginForm("Index", "allProduct", FormMethod.Get))
                {
                    <form class="d-flex col-md-auto justify-content-center">
                        <div class="d-flex align-items-center">
                            <input type="search" name="searchString" class="bd-search form-control me-2 form-control-dark" placeholder="search product..." />
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </section>

    <!-- Section Navigation Bar -->
    <section class="navigation-bar bg-black sticky-top">
        <div class="container-fluid">
            <nav class="navbar navbar-dark navbar-expand-lg bg-black">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex justify-content-end col-md-auto text-end d-block d-sm-none">
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Index", "Home", new { area = "" })">
                                <i class="bi bi-house-door"></i>
                                Home
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Index", "AllProduct", new { area = "" })">
                                All Product
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Shoes", "AllProduct", new { area = "" })">
                                Shoes
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Hat", "AllProduct", new { area = "" })">
                                Hat
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Shirt", "AllProduct", new { area = "" })">
                                Shirt
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Accessories", "AllProduct", new { area = "" })">
                                Accessories
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Create", "FeedbackClient", new { area = "" }, null)">
                                Feedback
                            </a>
                        </li>
                        <li class="me-4">
                            <a class="nav-link text-white store-navigation-link-homepage" href="@Url.Action("Index", "Dashboard", new { area = "Admin" }, null)">
                                Dashboard
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </section>

    <!-- Section Content -->
    <section class="content bg-white">
        @RenderBody()
        <div class="position-fixed bottom-0 end-0">
            <a href="#" class="me-2 me-md-3 ms-2 mb-2 mb-md-3 position-relative btn cart-button">
                <i class="bi bi-cart3 fs-3 cart-text"></i>
                <span class="position-absolute top-0 end-0 badge rounded-pill bg-danger p-1" style="font-size:9px">
                    4
                </span>
            </a>
        </div>
    </section>

