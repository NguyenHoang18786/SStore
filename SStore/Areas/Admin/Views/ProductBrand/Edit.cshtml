@model SStore.Models.ProductBrand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductBrand", new { area = "Admin" })" class="breadcrumb-client">Brands</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Update</li>
        </ol>
    </nav>
    <h1 class="my-3 text-center text-uppercase admin-page-title">Update Brand</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-center">
            <div class="container-fluid" style="max-width:500px">
                <form>
                    @Html.HiddenFor(model => model.BrandId)
                    <div class="mb-3">
                        <label for="BrandName" class="form-label fw-bold">
                            @Html.LabelFor(model => model.BrandName, "Brand Name")
                        </label>
                        @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn sub-button">Update</button>
                        <a href="@Url.Action("Details", "ProductCategory", new { id = Model.BrandId, area = "Admin"})" class="btn back-page-button">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

