@model SStore.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@ViewBag.OrderDetail
<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Order Date : @Html.DisplayFor(model => model.OrderDate)
        </dt>

        @*        <dt>
                Status : @Html.DisplayFor(model => model.Order.Status)
            </dt>

            </dt>

            <dt>
                PaymentType : @Html.DisplayFor(model => model.PaymentType)
            </dt>

            <dt>
                PaymentStatus : @Html.DisplayFor(model => model.PaymentStatus)
            </dt>*@

        <dt>
            CustomerName : @Html.DisplayFor(model => model.CustomerName)
        </dt>

        <dt>
            CustomerPhone : @Html.DisplayFor(model => model.CustomerPhone)
        </dt>

        <dt>
            CustomerEmail: @Html.DisplayFor(model => model.CustomerEmail)
        </dt>

        <dt>
            DeliveryAddress : @Html.DisplayFor(model => model.DeliveryAddress)
        </dt>
    </dl>
</div>

<table class="table">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @foreach (var item in ViewBag.OrderDetails)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.Image</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
        </tr>
    }
</table>
<dt>
    TotalPrice : @Html.DisplayFor(model => model.TotalPrice)

</dt>
<p>
