@model IEnumerable<SStore.Models.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="text-center my-3 admin-page-title">LIST PRODUCT CATEGORIES</h1>

    <a type="button" class="btn sub-button" href="@Url.Action("Create", "ProductCategory", new { area = "Admin" })">
        Add New Category
    </a>
    <hr />
    <table class="table">
        <tr>
            <th>
                No
            </th>
            <th>
                Category Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model.Select((d, i) => new { Data = d, Index = i + 1 }))
        {
            <tr>
                <td>
                    @item.Index
                </td>
                <td>
                    @item.Data.CategoryName
                </td>
                <td>
                    @item.Data.Description
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Data.CategoryId }, new { @class = "btn edit-button" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Data.CategoryId }, new { @class = "btn delete-button" })
                </td>
            </tr>
        }

    </table>
</div>