@model SStore.Models.Feedback

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-2 mb-3">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Feedback", new { area = "Admin" })" class="breadcrumb-client">Feedbacks</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Delete</li>
        </ol>
    </nav>
    <h2 class="text-center">Are you sure you want to delete this feedback?</h2>
    <div class="d-flex justify-content-center">
        <div class="container-fluid" style="max-width:700px">
            <div class="card mt-2 mt-sm-4 mb-2 mb-sm-3 border-dark">
                <div class="card-header bg-transparent border-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title">Title</h4>
                        <p class="m-0 fst-italic text-secondary">@Model.CreateDate</p>
                    </div>
                    <p class="card-text">@Model.Title</p>
                </div>
                <div class="card-body pt-2">
                    <h4 class="card-title">Customer</h4>
                    <ul class="list-group">
                        <li class="list-group-item align-items-center">
                            <p class="fw-bold mb-0 me-3 text-break">Name</p>
                            @if (Model.FullName == null)
                            {
                                <p class="fst-italic m-0">No information</p>
                            }
                            else
                            {
                                <p class="mb-0 text-wrap">@Model.FullName</p>

                            }
                        </li>
                        <li class="list-group-item align-items-center">

                            <p class="fw-bold mb-0 me-4">Email</p>
                            @if (Model.Email == null)
                            {
                                <p class="fst-italic m-0">No information</p>
                            }
                            else
                            {
                                <p class="mb-0 text-wrap">@Model.Email</p>

                            }
                        </li>
                        <li class="list-group-item align-items-center">

                            <p class="fw-bold mb-0 text-break me-3">Phone Number</p>
                            @if (Model.PhoneNumber == null)
                            {
                                <p class="fst-italic m-0">No information</p>
                            }
                            else
                            {
                                <p class="mb-0 text-wrap">@Model.PhoneNumber</p>

                            }
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-dark">
                    <h4 class="card-title">Description</h4>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color d-flex justify-content-between">
                    <button type="submit" value="Delete" class="btn delete-button">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a href="@Url.Action("Index", "Feedback", new{ area = "Admin" })" class="btn back-page-button">
                        Back to List
                    </a>
                </div>
            }
        </div>
    </div>
</div>


