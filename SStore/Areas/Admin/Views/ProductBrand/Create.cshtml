@model SStore.Models.ProductBrand

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-2">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="breadcrumb-client">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductBrand", new { area = "Admin" })" class="breadcrumb-client">Brands</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Create</li>
        </ol>
    </nav>
    <h1 class="my-3 text-center admin-page-title text-uppercase">Add New Brand</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex justify-content-center">
            <div class="container-fluid" style="max-width:500px">
                <form>
                    <div class="mb-3">
                        <label for="CategoryName" class="form-label fw-bold">
                            @Html.LabelFor(b => b.BrandName, "Brand Name")<span class="fw-normal text-danger">*</span>
                        </label>
                        @Html.TextBoxFor(b => b.BrandName, new { @class = "form-control", @placeholder = "Enter brand name", required = "required" })
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn sub-button"><span class="sub-button-text">Add</span></button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>