@model IEnumerable<SStore.Models.ProductBrand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center my-3 admin-page-title">LIST OF PRODUCT CATEGORIES</h1>

    <a type="button" class="btn sub-button" href="@Url.Action("Create", "ProductCategory", new { area = "Admin" })">
        Add New Category
    </a>
    <hr />

    <table class="table">
        <tr>
            <th>
                Brand Id
            </th>
            <th>
                Brand Name
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BrandId
                </td>
                <td>
                    @item.BrandName
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BrandId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BrandId })
                </td>
            </tr>
        }

    </table>
</div>