@model SStore.Models.IndexViewModel
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Manage";
}

<div class="container mt-2 mb-sm-4 mb-3">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new {area = ""})" class="breadcrumb-client"><i class="bi bi-house-door"></i> Home</a></li>
            <li class="breadcrumb-item breadcrumb-client-active">Setting</li>
        </ol>
    </nav>
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="mb-5">
        <h2 class="text-uppercase text-center page-title">Manage</h2>
        <p class="lead text-center fs-6 text-secondary">
            Change your account settings
        </p>
        <div class="mb-3 p-1">
            Password: @if (Model.HasPassword)
            {
                <a href="@Url.Action("ChangePassword","Manage")" class="mx-1 border border-1 rounded border-warning text-warning p-1">Change password</a>
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
        </div>
        <div class="mb-4 p-1">
            Profile:
            <a href="@Url.Action("Details", "User", new { area ="" })" class="ms-1 border border-1 rounded border-primary p-1">Details <i class="bi bi-card-text"></i></a>
            <a href="@Url.Action("Edit", "User", new { area ="" })" class="mx-1 border border-1 rounded border-success p-1 text-success">Edit <i class="bi bi-pen"></i></a>
        </div>
    </div>

